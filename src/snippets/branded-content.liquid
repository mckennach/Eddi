

<section class="branded_cta {{ section.settings.align }}">
  <div class="container">
    <div class="row row-cols-md-2">
      {%- if section.settings.align == 'right' -%}
        <div class="lazyload col-md branded_cta--img" data-aos="fade" data-bgset="{% include 'responsive-bg-image', image: section.settings.image %}"></div>
      {%- endif -%}

      <div class="col-md d-flex justify-content-center align-items-center">
        <div class="branded_cta--txt-container" >
          <div class="branded_cta--txt-inner-container">
            {%- if section.settings.show_icon -%}
              <div class="branded_cta--icon" data-aos="fade">
                {% include "icon-the-planet" %}
              </div>
            {%- endif -%}


            {% if section.settings.title != blank %}
              {%- if page.handle == 'how-it-works' -%}
                <h2 class="branded_cta--title" data-aos="fade">
                  {{ section.settings.title }}
                </h2>
              {%- else  -%}
              <div class="branded_cta--title" data-aos="fade">
                <p>
                  {{ section.settings.title }}
                </p>
              </div>
              {%- endif -%}
            {% endif %}

            {% if section.settings.desc != blank %}
              <div class="branded_cta--desc" data-aos="fade">
                  {{ section.settings.desc }}
              </div>
            {% endif %}

            {% if section.settings.link != blank %}
              <div class="branded_cta--link-container" data-aos="fade">
                <a href="{{ section.settings.link }}">
                  {{ section.settings.link_label }}
                </a>
              </div>
          </div>

          {% endif %}
        </div>
      </div>

      {%- if section.settings.align == 'left' -%}
        <div class="lazyload col-md branded_cta--img" data-aos="fade" data-bgset="{% include 'responsive-bg-image', image: section.settings.image %}"></div>
      {%- endif -%}
    </div>
  </div>
</section>
