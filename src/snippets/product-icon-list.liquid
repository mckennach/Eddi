{% if product.metafields.custom_fields["icon_list"] != blank %}

  <section class="product_icon_list">
    <div class="container">
      <div class="row">
        {% for item in product.metafields.custom_fields["icon_list"] %}
          <div class="col">
            {% if item["icon"] != blank %}
              <div class="product_icon_list--icon" data-aos="fade">
                <img src='{{item["icon"]}}' alt="">
              </div>
            {% endif %}
            {% if item["label"] != blank %}
              <h4 class="product_icon_list--icon-label" data-aos="fade">{{ item["label"] }}</h4>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
{% endif %}
